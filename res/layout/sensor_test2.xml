<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mtr="http://schemas.android.com/apk/res/org.wangliang.app.learn"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />

    <org.wangliang.app.learn.sensor.Thermometer2
        android:id="@+id/thermometer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        mtr:incrementPerLargeNotch="10"
        mtr:incrementPerSmallNotch="2"
        mtr:scaleCenterValue="20"
        mtr:scaleColor="0x9f004d0f"
        mtr:scaleLowerTitle="http://mindtherobot.com"
        mtr:scaleMaxValue="110"
        mtr:scaleMinValue="-30"
        mtr:scaleUpperTitle="http://atstechlab.wordpress.com"
        mtr:totalNotches="100" />
